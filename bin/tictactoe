#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def play()
  while (!over?(board))
    turn(board)
  end

  if won?(board)
    puts "Congratulations, #{winner(board)}!"
  elsif draw?(board)
    puts "Draw. Boring."
  end
end

play(board)
